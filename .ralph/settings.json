{
  "maximumIterations": 20,
  "completionResponse": "DONE",
  "outputTruncateChars": 5000,
  "streamAgentOutput": true,
  "includeIterationCountInPrompt": true,
  "agent": {
    "command": "claude",
    "flags": [
      "--model",
      "claude-opus-4-5",
      "--permission-mode",
      "acceptEdits"
    ]
  },
  "guardrails": [
    {
      "command": "make fmt",
      "failAction": "APPEND"
    },
    {
      "command": "make lint",
      "failAction": "APPEND"
    },
    {
      "command": "make build",
      "failAction": "APPEND"
    },
    {
      "command": "make test",
      "failAction": "APPEND"
    }
  ],
  "scm": {
    "command": "git",
    "tasks": ["commit"]
  }
}
